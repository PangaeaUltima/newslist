{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "cypress.config.*",
    "tailwind.config.js"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "allowJs": true
  }
}
